<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.GridLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:grid="http://schemas.android.com/apk/res-auto"
    android:background="@color/background"
    grid:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    grid:alignmentMode="alignBounds"
    grid:rowOrderPreserved="false"
    grid:columnCount="2"
    grid:rowCount="2" >

    <RelativeLayout
        android:layout_height="0dp"
        android:layout_width="0dp"
        grid:layout_column="1"
        grid:layout_row="0"
        grid:layout_columnWeight="1"
        grid:layout_rowWeight="1"
        grid:layout_gravity="fill_horizontal|center_horizontal"
        android:background="#F06292"
        android:id="@+id/button_upload_file"
        android:layout_marginTop="@dimen/grid_single_padding"
        android:layout_marginRight="@dimen/grid_single_padding" >

        <TextView
            android:id="@+id/tv_2_cn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_above="@+id/tv_2_en"
            android:textSize="5dp"
            android:gravity="center"
            android:text=""
            android:singleLine="false" />

        <TextView
            android:id="@+id/tv_2_en"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:paddingBottom="@dimen/grid_text_bottom_padding"
            android:textSize="@dimen/grid_text_size"
            android:gravity="center"
            android:text="Upload Image"
            android:layout_alignParentBottom="true"
            android:singleLine="false" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingTop="70sp"
            android:id="@+id/imageView2"
            android:src="@drawable/upload"
            android:layout_centerInParent="true"
            android:layout_above="@+id/tv_2_cn"
            android:layout_centerHorizontal="true" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_height="0dp"
        android:layout_width="0dp"
        grid:layout_column="1"
        grid:layout_row="1"
        grid:layout_columnWeight="1"
        grid:layout_rowWeight="1"
        grid:layout_gravity="fill_horizontal|center_horizontal"
        android:background="#7986CB"
        android:id="@+id/button_add_friend"
        android:layout_marginTop="@dimen/grid_single_padding"
        android:layout_marginRight="@dimen/grid_single_padding"
        android:layout_marginBottom="@dimen/grid_single_padding">

        <TextView
            android:id="@+id/tv_4_cn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_above="@+id/tv_4_en"
            android:textSize="5dp"
            android:gravity="center"
            android:text=""
            android:singleLine="false" />

        <TextView
            android:id="@+id/tv_4_en"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:paddingBottom="@dimen/grid_text_bottom_padding"
            android:textSize="@dimen/grid_text_size"
            android:gravity="center"
            android:text="Add Friend"
            android:layout_alignParentBottom="true"
            android:singleLine="false" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingTop="15sp"
            android:id="@+id/imageView4"
            android:src="@drawable/add"
            android:layout_above="@+id/tv_4_cn"
            android:layout_centerHorizontal="true"/>
    </RelativeLayout>

